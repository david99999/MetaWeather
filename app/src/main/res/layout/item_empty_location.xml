<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="?attr/selectableItemBackground"
    android:gravity="center">

    <TextView
        android:id="@+id/locationTitle"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/location_result_text_padding"
        android:gravity="center"
        android:padding="@dimen/location_result_text_padding"
        app:drawableTopCompat="@drawable/ic_start_searching"
        android:text="@string/start_searching_for_locations" />

</LinearLayout>